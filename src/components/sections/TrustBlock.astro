---
import Icon from "../ui/Icon.astro";

interface Props {
  lang?: 'es' | 'en';
}

const { lang = "en" } = Astro.props;

const content = {
  en: {
    pillars: [
      {
        icon: "lucide:calendar-check",
        title: "+8 years of experience",
        text: "Founded in 2017. Industrial and commercial electrical projects.",
      },
      {
        icon: "lucide:shield-check",
        title: "Regulatory compliance",
        text: "Work aligned with NOM, CFE and UVIE verification.",
      },
      {
        icon: "lucide:building-2",
        title: "Corporate clients",
        text: "Offices, industrial facilities, commercial developments.",
      },
      {
        icon: "lucide:check-circle",
        title: "Professional execution",
        text: "Technical diagnosis, organized execution and work warranty.",
      },
    ],
    reinforcements: [
      "Founded in 2017",
      "NOM / CFE / UVIE compliance",
      "Industrial and commercial projects",
      "Guaranteed professional execution",
    ],
  },
  es: {
    pillars: [
      {
        icon: "lucide:calendar-check",
        title: "+8 años de experiencia",
        text: "Fundada en 2017. Proyectos eléctricos industriales y comerciales.",
      },
      {
        icon: "lucide:shield-check",
        title: "Cumplimiento normativo",
        text: "Trabajo alineado con verificación NOM, CFE y UVIE.",
      },
      {
        icon: "lucide:building-2",
        title: "Clientes corporativos",
        text: "Oficinas, naves industriales, desarrollos comerciales.",
      },
      {
        icon: "lucide:check-circle",
        title: "Ejecución profesional",
        text: "Diagnóstico técnico, ejecución organizada y garantía de obra.",
      },
    ],
    reinforcements: [
      "Fundada en 2017",
      "Cumplimiento NOM / CFE / UVIE",
      "Proyectos industriales y comerciales",
      "Ejecución profesional garantizada",
    ],
  },
};

const { pillars, reinforcements } = content[lang as keyof typeof content] || content.en;
---

<section class="bg-gray-50 py-20 md:py-28 border-b border-gray-200">
  <div class="container mx-auto px-4 max-w-7xl">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 md:gap-6 lg:gap-8 mb-10">
      {
        pillars.map((pillar) => (
          <div class="flex flex-col items-center sm:items-start text-center sm:text-left">
            <div class="text-blue-600 bg-blue-50 p-2 rounded-lg mb-4 flex items-center justify-center w-10 h-10 flex-shrink-0">
              <Icon name={pillar.icon} class="w-6 h-6" />
            </div>
            <h3 class="font-bold text-gray-900 text-lg leading-tight mb-3">
              {pillar.title}
            </h3>
            <p class="text-gray-600 text-sm leading-relaxed">
              {pillar.text}
            </p>
          </div>
        ))
      }
    </div>

    <!-- Ads-first reinforcement -->
    <div class="border-t border-gray-200 pt-8 pb-10">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 md:gap-6 lg:gap-8">
        {
          reinforcements.map((item) => (
            <p class="text-xs text-gray-900 font-medium leading-[1.7] text-center sm:text-left">
              {item}
            </p>
          ))
        }
      </div>
    </div>
  </div>
</section>
