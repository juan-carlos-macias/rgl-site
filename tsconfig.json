{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "preserve",
    "jsxImportSource": "react",
    "baseUrl": ".",
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@layouts/*": ["src/layouts/*"],
      "@lib/*": ["src/lib/*"],
      "@sanity/*": ["sanity/*"]
    }
  },
  "include": ["src/**/*", "sanity/**/*", "astro.config.ts"],
  "exclude": ["node_modules", "dist"]
}
