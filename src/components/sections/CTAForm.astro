---
import Button from '@components/ui/Button.astro';
import type { SiteSettings } from '@lib/sanity/types';

interface Props {
  settings: SiteSettings;
  lang: 'es' | 'en';
}

const { settings, lang } = Astro.props;

const labels = {
  es: {
    title: '¿Listo para iniciar tu proyecto?',
    subtitle: 'Nuestros ingenieros expertos te asesorarán en la mejor solución para tus necesidades industriales o comerciales.',
    formName: 'Nombre completo',
    formEmail: 'Correo electrónico',
    formPhone: 'Teléfono',
    formMessage: 'Cuéntanos sobre tu proyecto',
    formSubmit: 'Enviar solicitud',
    or: 'O contáctanos directamente vía',
    success: '¡Gracias! Nos pondremos en contacto pronto.'
  },
  en: {
    title: 'Ready to start your project?',
    subtitle: 'Our expert engineers will advise you on the best solution for your industrial or commercial needs.',
    formName: 'Full Name',
    formEmail: 'Email Address',
    formPhone: 'Phone Number',
    formMessage: 'Tell us about your project',
    formSubmit: 'Send request',
    or: 'Or contact us directly via',
    success: 'Thank you! We will get in touch soon.'
  }
};
---

<section class="py-24 text-white" style="background-color: #902d35;" id="contacto">
  <div class="container-custom">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16">
      <div>
        <h2 class="text-3xl md:text-5xl font-bold mb-6">
          {labels[lang].title}
        </h2>
        <p class="text-xl text-white/90 mb-12">
          {labels[lang].subtitle}
        </p>

        <div class="space-y-6">
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-full bg-white/20 flex items-center justify-center text-white">
               <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path></svg>
            </div>
            <div>
              <p class="text-sm text-white/70 uppercase font-bold tracking-wider">{lang === 'es' ? 'Teléfono' : 'Phone'}</p>
              <a href={`tel:${settings?.phones?.[0]?.number}`} class="text-xl font-semibold hover:text-white transition-colors">
                {settings?.phones?.[0]?.number}
              </a>
            </div>
          </div>
          
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 rounded-full bg-green-500 flex items-center justify-center text-white">
               <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24"><path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L0 24l6.335-1.662c1.72.937 3.659 1.432 5.631 1.433h.01c6.551 0 11.89-5.335 11.893-11.892a11.826 11.826 0 00-3.376-8.412"></path></svg>
            </div>
            <div>
              <p class="text-sm text-white/70 uppercase font-bold tracking-wider">WhatsApp</p>
              <a href={`https://wa.me/${settings?.whatsappNumber}`} target="_blank" class="text-xl font-semibold hover:text-white transition-colors">
                {settings?.whatsappNumber}
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white rounded-2xl p-8 md:p-10 text-gray-900">
        <form id="contact-form" class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-semibold text-gray-700 mb-2">{labels[lang].formName}</label>
            <input type="text" id="name" name="name" required class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all" />
          </div>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <label for="email" class="block text-sm font-semibold text-gray-700 mb-2">{labels[lang].formEmail}</label>
              <input type="email" id="email" name="email" required class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all" />
            </div>
            <div>
              <label for="phone" class="block text-sm font-semibold text-gray-700 mb-2">{labels[lang].formPhone}</label>
              <input type="tel" id="phone" name="phone" required class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all" />
            </div>
          </div>
          <div>
            <label for="message" class="block text-sm font-semibold text-gray-700 mb-2">{labels[lang].formMessage}</label>
            <textarea id="message" name="message" rows="4" required class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all"></textarea>
          </div>
          <Button type="submit" size="xl" className="w-full">
            {labels[lang].formSubmit}
          </Button>
          <p id="form-status" class="hidden text-center font-medium text-green-600"></p>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  function setupContactForm() {
    const form = document.getElementById('contact-form') as HTMLFormElement;
    const status = document.getElementById('form-status');
    if (!form || !status) return;

    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      
      // Tracking: dataLayer event
      (window as any).dataLayer = (window as any).dataLayer || [];
      (window as any).dataLayer.push({
        event: 'form_submit',
        form_id: 'contact_footer'
      });

      // Show success (actual submission logic depends on backend/API)
      form.style.opacity = '0.5';
      form.querySelectorAll('input, textarea, button').forEach(el => (el as any).disabled = true);
      
      status.textContent = (window as any).formSuccessMessage || '¡Gracias! Nos pondremos en contacto pronto.';
      status.classList.remove('hidden');
      
      // Reset form (simulated)
      setTimeout(() => {
        form.reset();
        form.style.opacity = '1';
        form.querySelectorAll('input, textarea, button').forEach(el => (el as any).disabled = false);
      }, 3000);
    });
  }

  setupContactForm();
  document.addEventListener('astro:after-swap', setupContactForm);
</script>
