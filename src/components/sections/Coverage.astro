---
interface Props {
  lang: 'es' | 'en';
}

const { lang } = Astro.props;

const labels = {
  es: {
    title: 'Nuestra Cobertura',
    description: 'Atendemos proyectos de alta exigencia en las principales zonas industriales y comerciales.',
    cities: ['Ciudad de México (CDMX)', 'Querétaro (QRO)', 'Guadalajara (GDL)'],
    nationwide: 'Servicio a nivel nacional bajo solicitud especial.'
  },
  en: {
    title: 'Our Coverage',
    description: 'We handle high-demand projects in key industrial and commercial zones.',
    cities: ['Mexico City (CDMX)', 'Queretaro (QRO)', 'Guadalajara (GDL)'],
    nationwide: 'Nationwide service available upon request.'
  }
};
---

<section class="py-24 bg-blue-600 text-white overflow-hidden relative">
  <div class="absolute inset-0 opacity-10 pointer-events-none">
     <!-- Abstract pattern or map could go here -->
     <div class="w-full h-full bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-blue-400 to-transparent"></div>
  </div>
  
  <div class="container-custom relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
      <div>
        <h2 class="text-3xl md:text-4xl font-bold mb-6">
          {labels[lang].title}
        </h2>
        <p class="text-xl text-blue-100 mb-8 max-w-xl">
          {labels[lang].description}
        </p>
        <div class="flex items-center gap-3 p-4 bg-blue-700/50 rounded-lg border border-blue-500/30">
          <div class="w-2 h-2 rounded-full bg-green-400 animate-pulse"></div>
          <p class="font-medium">{labels[lang].nationwide}</p>
        </div>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
        {labels[lang].cities.map((city) => (
          <div class="bg-white/10 backdrop-blur-sm p-6 rounded-xl border border-white/20 text-center hover:bg-white/20 transition-colors">
            <p class="font-bold text-lg">{city}</p>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>
